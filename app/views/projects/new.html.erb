<h3 class="form-group">Veuillez entrer les détails de votre projet item</h3>

<%= form_with model: @project, method: :post do |f| %>
  <div class="form-group">
    <%= f.label :name, "Indiquez le nom" %>
    <%= f.text_field :name, class:"form-control", placeholder:"(champ obligatoire)" %>
  </div>
  <div class="form-group">
    <%= f.label :description, "Ajoutez une description" %>
    <%= f.text_area :description, class:"form-control" %>
  </div>
  <p>Sur quel page souhaitez-vous ajouter votre nouvel item ?</p>
  <div>
    <%= f.check_box :is_woodworking %>
    <%= f.label :is_woodworking, "Woodworking" %>
  </div>
  <div>
    <%= f.check_box :is_web %>
    <%= f.label :is_web, "Web development" %>
  </div>
  <div>
    <%= f.label :photo, "Sélectionnez vos images" %>
    <%= f.file_field :photo, class:"form-control-file" %>
  </div>
  <div class="form-group">
    <%= f.submit class:"btn btn-primary btn-lg btn-block" %>
  </div>
<% end %>

<div>
  <%= link_to 'Back to the main page', root_path %></p>
</div>