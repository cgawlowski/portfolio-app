<div class="container d-flex flex-row">

    <div>
      <% @project.photos.each_with_index do |photo| %>
        <div><%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill %></div>
      <% end %>
    </div>

  <div class="d-flex flex-column align-items-center justify-content-between border border-light rounded p-4">
    <div>
      <h1><%= @project.name %></h1>
      <p><%= @project.description %></p>
    </div>

      <div class="d-flex flex-row justify-content-around">
        <% if policy(@project).edit? %>
          <div>
            <%= link_to "Mettre à jour", edit_project_path(@project), class: "btn btn-warning" %>
          </div>
        <% end%>
        <% if policy(@project).destroy? %>
          <div>
            <%= link_to "Supprimer",
              project_path(@project),
              data: {turbo_method: :delete, turbo_confirm: "Sûr de ton coup ?"},
              class: "btn btn-danger" %>
          </div>
        <% end %>
      </div>

    <div>
      <% if @project.is_web == true %>
        <%= link_to "Retour", web_path, class: "btn btn-danger" %>
      <% else @project.is_woodworking == true %>
          <%= link_to "Retour", woodwork_path, class: "btn btn-dark" %>
      <% end %>
    </div>
  </div>

</div>
