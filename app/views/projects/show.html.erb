<div class="container d-flex flex-row">

  <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    
    <div class="carousel-inner">
      <% @project.photos.each_with_index do |photo, index| %>
        <div class="carousel-item active  <%= index == 0 ? 'active' : "" %>">
          <div class="d-block w-80"><%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill %></div>
        </div>
      <% end %>
    </div>

    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>

  <div class="d-flex flex-column align-items-center justify-content-between border border-light rounded p-4">
    <div>
      <h1><%= @project.name %></h1>
      <p><%= @project.description %></p>
    </div>

    <div class="d-flex flex-row justify-content-between">
      <div>
        <%= link_to "Mettre à jour", edit_project_path(@project), class: "btn btn-warning" %>
      </div>
      <div>
        <%= link_to "Supprimer",
          project_path(@project),
          data: {turbo_method: :delete, turbo_confirm: "Sûr de ton coup ?"},
          class: "btn btn-danger" %>
      </div>

    </div>
    <div>
      <% if @project.is_web == true %>
        <%= link_to "Retour", web_path, class: "btn btn-danger" %>
      <% else @project.is_woodworking == true %>
          <%= link_to "Retour", woodwork_path, class: "btn btn-dark" %>
      <% end %>
    </div>
  </div>

</div>
