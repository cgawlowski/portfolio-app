<div>
  <h1><%= @project.name %></h1>
  <p><%= @project.description %></p>
    <div class="picture">
      <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
          <% @project.photos.each_with_index do |photo, index|  %>
              <div class="carousel-item <%= index == 0 ? 'active' : "" %>">
                  <div class="d-block w-100"><%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill %></div>
              </div>
          <% end %>
        </div>
      </div>
      <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
  </div>
</div>
<div>
  <%= link_to "Mettre à jour", edit_project_path(@project) %>
</div>
<div>
  <%= link_to "Supprimer",
    project_path(@project),
    data: {turbo_method: :delete, turbo_confirm: "Sûr de ton coup ?"}
  %>
</div>
<div>
  <%= link_to "Retour à l'index", root_path %>
</div>

