<div class="container">
  <div class="row align-items-center justify-content-around">

    <% @projects.each do |project| %>
      <% if project.is_woodworking == true %>
        <div class="card col-5">
          <div class="card-img">

            <% project.photos.each do |photo| %>
              <% if project.photos[0] %>
                <%= cl_image_tag photo.key, crop: :fill %>
                <% break %> 
              <% end %>
            <% end %>
            <div class="card-img-overlay">
              <h3 class="card-title d-flex align-items-center "><%= link_to project.name, project_path(project) %></h3>
            </div>
            
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>